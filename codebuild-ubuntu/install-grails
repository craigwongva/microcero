cd /home/ec2-user
aws s3 cp s3://redf4rth-root/gocontainer/dotsdkman-grails.zip . 
sudo apt install unzip
unzip dotsdkman-grails.zip
. .sdkman/bin/sdkman-init.sh
sdk install grails 2.4.0

#Grails is now runnable here (this was true on Amazon Linux; on Ubuntu this might not work):
# .sdkman/candidates/grails/2.4.0/bin/grails

#works on Ubuntu:
export JAVA_HOME=/usr
#Runnable as:
#grails
